generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(cuid())
  email               String
  source              String               @default("tablou.net") // 'shopprint.ro' sau 'tablou.net' sau 'prynt.ro'
  name                String?
  phone               String?
  passwordHash        String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  emailVerified       DateTime?
  image               String?
  role                String               @default("user")
  stripeCustomerId    String?              @unique

  @@unique([email, source])
  
  accounts            Account[]
  sessions            Session[]
  orders              Order[]
  addresses           Address[]
  reviews             Review[]
  aiConversations     AiConversation[]
  passwordResetTokens PasswordResetToken[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Address {
  id         String   @id @default(cuid())
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
  label      String?
  nume       String?
  email      String?
  telefon    String?
  country    String   @default("RO")
  judet      String
  localitate String
  strada_nr  String
  postCode   String?
  bloc       String?
  scara      String?
  etaj       String?
  ap         String?
  interfon   String?
  company    String?
  cui        String?
  regCom     String?
  isDefault  Boolean  @default(false)
  type       String   @default("shipping")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Order {
  id               String      @id @default(cuid())
  orderNo          Int         @unique @default(autoincrement())
  userId           String?
  user             User?       @relation(fields: [userId], references: [id])
  status           String      @default("pending")
  totalAmount      Decimal
  paymentMethod    String
  shippingAddress  Json // Stocăm obiect complet JSON
  billingAddress   Json // Stocăm obiect complet JSON
  invoiceUrl       String?
  awbNumber        String?
  awbCarrier       String?
  shippingFee      Decimal?     @default(0)
  source           String       @default("tablou.net") // 'shopprint.ro' or 'tablou.net' or 'prynt.ro'
  type             String       @default("order") // "order" | "offer"
  awbLabelBase64   String?
  awbLabelFileName String?
  canceledAt       DateTime?
  items            OrderItem[]
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  
  marketing        Json?
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String?
  name      String
  quantity  Int
  price     Decimal
  total     Decimal?
  metadata  Json?
  artworkUrl String?
}

model PendingCheckout {
  id           String   @id @default(cuid())
  sessionId    String   @unique
  checkoutData Json
  expiresAt    DateTime
  createdAt    DateTime @default(now())
}

model DiscountCode {
  id             String    @id @default(cuid())
  code           String    @unique
  type           String    
  value          Float     
  minOrderValue  Float?    @default(0)
  maxUses        Int?      
  currentUses    Int       @default(0)
  validFrom      DateTime  @default(now())
  validUntil     DateTime
  isActive       Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Review {
  id          String   @id @default(cuid())
  rating      Int
  title       String?
  content     String
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productSlug String
  
  @@index([productSlug])
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  source    String?
  createdAt DateTime @default(now())
}

model AiConversation {
  id            String      @id @default(cuid())
  source        String
  identifier    String
  userId        String?
  hasError      Boolean     @default(false)
  isRead        Boolean     @default(false)
  lastMessageAt DateTime    @default(now())
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  aiPaused      Boolean     @default(false)
  customTag     String?
  status        String      @default("active")
  user          User?       @relation(fields: [userId], references: [id])
  messages      AiMessage[]
}

model AiMessage {
  id             String         @id @default(cuid())
  conversationId String
  role           String
  content        String
  createdAt      DateTime       @default(now())
  conversation   AiConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

model AbandonedCart {
  id              String   @id @default(cuid())
  email           String
  configuratorId  String
  cartData        Json
  emailSentCount  Int      @default(0)
  lastEmailSent   DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  source          String   @default("tablou.net")
  
  @@unique([email, configuratorId])
}
